log_format CSP escape=none $request_body;

server {
  listen <%= ENV['PORT'] %>;
  set $logme 0;
  access_log logs/access.log CSP if=$logme;
  
  client_max_body_size 4k;
  
  location = / {
    limit_except POST { 
      deny all; 
    }
    if ($http_content_type != "application/csp-report") {
      return 403;
    } 
    set $logme 1;`
    proxy_pass http://127.0.0.1:3000/;
  }
}

server {
  listen 3000;
  access_log off;
  
  location / {
    return 204;
  }
}